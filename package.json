{
  "name": "sudoku-server",
  "version": "1.0.0",
  "description": "Sudoku server",
  "main": "dist/server.js",
  "engines": {
    "node": ">=12.6.0"
  },
  "scripts": {
    "eslint": "eslint --ext .js --ext .ts --max-warnings 0 ./src",
    "prettier:fix": "prettier src/**/*.ts --write",
    "lint": "npm run prettier:fix && npm run eslint",
    "prebuild": "npm run eslint",
    "build": "tsc",
    "start": "node ./dist/server.js",
    "dev": "PORT=5000 ts-node-dev --respawn --transpileOnly src/server.ts",
    "deploy": "git push heroku master"
  },
  "author": "Sara Nordmyr da Cunha",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^17.1.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.8.9",
    "morgan": "^1.9.1",
    "tslib": "^1.11.1"
  },
  "devDependencies": {
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/hapi__joi": "^16.0.12",
    "@types/mongoose": "^5.5.41",
    "@types/morgan": "^1.9.0",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "prettier": "^1.19.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.5"
  }
}
